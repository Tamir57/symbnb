{% extends 'base.html.twig' %}

{% block title %}
    Bienvenue sur SymBNB
{% endblock %}

{% block body %}
   {#  {{ dump(ads) }} #}
    <div class="container">
        <div class="jumbotron mt-3">
            <h1 class="display-3">Bievenu sur SymBNB</h1>
            <p class="lead">Pr√©sentation de mon site ...</p>
            <hr class="my-4">
            <p>Vous voulez voir ou vous pourrez loger ?</p>
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="#" role="button">Voir nos anonces</a>
            </p>
        </div>

        <h2 class ="h1 mt-3 mb-4">Nos best apprt</h2>

        <div class="row">
            {% for data in ads %}
                {% include 'ad/_ad.html.twig' with {'ad': data.annonce} %}
            {% endfor %}
        </div> 

        <h2 class ="h1 mt-3 mb-4">Nos best propri </h2>
    {#  {{ dump(users) }} #}
        <div class="row ">
            {% for data in users %}
                <div class="col">
                    <div class="card border-secondary mb-3">
                        <div class="card-body">
                            <h4 class="card-title">{{data.user.fullName}}</h4>

                            <hr>

                            <div class="card-text">
                                <img src="{{data.user.picture}}" alt="Avatar de {{data.user.fullName}}" class="float-left mr-3">
                                <p>{{data.user.introduction}}</p>
                                <a href="{{ path('user_show', {'slug': data.user.slug})}}" class="btn btn-success float-right">En savoir plus!</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>


{% endblock %}
