{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des réservations{% endblock %}



{% block body %}

<div class="container">
    {# read and display all flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="text-center alert alert-{{ label }}">
                {{ message | raw }}
            {#  {{comment.author.fullName}} #}
            </div>
        {% endfor %}
    {% endfor %} 
</div>

     <div class="container-fluid">
        <h1 class="my-5">Gestion des réservations</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Visiteur</th>
                    <th>Annonce</th>
                    <th>Durée</th>
                    <th>Montant</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                {% for booking in bookings %}
                <tr>
                    <td>{{booking.id}}</td>
                    <td>{{booking.createdAt|date('d/m/Y H:i')}}</td>
                    <td><img src="{{booking.booker.picture}}" alt="" class="avatar avatar-micro"> {{booking.booker.fullName}}</td>
                    <td>{{booking.ad.title}}</td>
                    <td>{{booking.duration}}</td>
                    <td>{{booking.amount | number_format(2, ",", " ")}} &euro;</td>
                    <td>
                        <a href="{{ path('admin_booking_edit', {'id': booking.id}) }}" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a href="{{ path('admin_booking_delete', {'id': booking.id}) }}" class="btn btn-danger"> 
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>   
        </table>
    </div>
{% endblock %}



{% block javascripts %}

{% endblock %}
