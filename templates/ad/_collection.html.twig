
{% block _ad_images_widget %}
    <p>Vous pouvez ajouter vos images !</p>
    {# ici form ne repr√©sente QUE le champd ad_images !!! #}
    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary ">Ajouter une image</button>
    </div>

{% endblock %}

{% block _ad_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _ad_images_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_label(form.url) }}
                        {{ form_widget(form.url) }}
                        {{ form_errors(form.url) }}
                    </div>
                    <div class="col">
                        {{ form_label(form.caption) }}
                        {{ form_widget(form.caption) }}
                        {{ form_errors(form.caption) }}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <div class="" style="margin-top:35px;">
                    <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger ">X</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}